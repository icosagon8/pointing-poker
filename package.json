{
  "name": "pointing-poker",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "nanoid": "^3.1.25",
    "socket.io": "^4.2.0"
  },
  "scripts": {
    "client": "npm start --prefix client",
    "server": "ts-node ./server/app.ts",
    "watch": "nodemon ./build/app.js",
    "build": "tsc",
    "build:all": "npm run build && npm run build --prefix client",
    "start:all": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint server",
    "fix": "eslint server --fix"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^16.7.13",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
}
